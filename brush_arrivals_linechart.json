{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/ElisabethCWY/3179_HW1_Submission/refs/heads/main/cpi_arrivals_join.csv"
    },
    "background": "rgb(0,0,0,0)",

    "vconcat": [
      {
        "width": 600,
        "height": 400,
        
        "selection": {
          "stateSelection": {
            "type": "single",
            "fields": ["state"],
            "on": "click",
            "bind": "legend"
          }
        },
        
        "mark": {"type": "line", 
        "interpolate": "monotone",
        "strokeWidth": 3 },
        
        "encoding": {
          "x": {
            "timeUnit": "yearmonth",
            "scale": {"domain": {"param": "time_brush"}},
            "field": "date",
            "type": "temporal",
            "title": "Date",
            "axis": {
              "format": "%Y",
              "tickCount": 5,
              "labelOverlap": "parity",
              "grid": false,
              "format": "%b %Y"
      
            }
          },
          "y": {
              "field": "total_arrivals",
              "type": "quantitative",
              "title": "Total Arrivals"
                },
          "color": {
            "field": "state",
            "type": "nominal",
            "title": "State",
            "scale": {
              "scheme": "tableau10"
            }
          },
          "opacity": {
            "condition": {
              "selection": "stateSelection",
              "value": 1
            },
            "value": 0.1
          },
           "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "date", "type": "temporal", "title": "Date", "format": "%b %Y"},
          {"field": "total_arrivals", "type": "quantitative", "title": "Total Arrivals", "format": ",d"}
        ]
          
        }
      },
      {
        "width": 600,
        "height": 100,
        
        "mark": {
          "type": "area",
         "interpolate": "monotone"
        },
        "params": [
          {
            "name": "time_brush",
            "select": {"type": "interval", "encodings": ["x"]}
          }
        ],
        "transform": [
          {
            "aggregate": [
              {
                "op": "mean",
                "field": "total_arrivals",
                "as": "mean_total_arrivals"
              }
            ],
            "groupby": ["date"]
          }
        ],
        "encoding": {
          "x": {
            "field": "date",
            "type": "temporal",
            "timeUnit": "yearmonth",
            "axis": {
              "format": "%Y",
              "tickCount": 5,
              "labelOverlap": "parity",
              "title": "Years",
              "grid": false
            }
          },
          "y": {
            "field": "mean_total_arrivals",
            "type": "quantitative",
            "title": "Average Number of Arrivals (%)"
          }
        }

      }
    ]
  }
  