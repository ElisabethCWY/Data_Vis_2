{
  "background": "rgb(0,0,0,0)",
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "CPI: Month on Month Inflation by State",
    "fontSize": 25
  },
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/ElisabethCWY/3179_HW1_Submission/refs/heads/main/cpi_arrivals_join.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"calculate": "month(datum.date)", "as": "month"},
    {"calculate": "year(datum.date)", "as": "year"},
    {"calculate": "datetime(datum.year, datum.month, 1)", "as": "month_date"}
  ],
  "selection": {
    "stateSelection": {
      "type": "single",
      "fields": ["state"],
      "on": "click",
      "bind": "legend"  
    }
  },
  "mark": {"type": "line", "interpolate": "monotone"},
  "encoding": {
    "x": {
      "field": "month_date",
      "type": "temporal",
      "title": "Date",
      "axis": {"format": "%Y", "tickCount": 5, "labelOverlap": "parity"}
    },
    "y": {
      "field": "inflation_mom", 
      "type": "quantitative",
      "title": "Inflation Rate (%)"
    },
    "color": {
      "field": "state", 
      "type": "nominal",
      "title": "State",
      "scale": {
        "scheme": "tableau10" 
      }
    },
    "opacity": {
      "condition": {
        "selection": "stateSelection", 
        "value": 1        
      },
      "value": 0.05
    }
  }
}
