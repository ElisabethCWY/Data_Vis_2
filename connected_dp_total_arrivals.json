{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Total Arrivals by Gender",
      "fontSize": 20
    },
    "width": 500,
    "height": 300,
    "background": "rgb(0,0,0,0)",
    "data": {
      "url": "https://raw.githubusercontent.com/ElisabethCWY/3179_HW1/refs/heads/main/aggregated_arrivals_soe.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "fold": ["total_arrivals_female", "total_arrivals_male"],
        "as": ["Gender", "TotalArrivals"]
      },
      {
        "calculate": "datum.TotalArrivals /1000",  
        "as": "PercentageArrivals"
      }
    ],

    "encoding": {
      "x": {
        "field": "PercentageArrivals",
        "type": "quantitative",
        "title": "Total Arrivals (In Thousands)",
        "axis": {"titleFontSize": 13}
      },
      "y": {
        "field": "soe",
        "type": "nominal",
        "title": "States",
        "axis": {
          "offset": 5,
          "ticks": false,
          "minExtent": 70,
          "domain": false,
          "titleFontSize": 13
        }
      }
    },
    "layer": [
      
      {
        "mark": "line",
        "encoding": {
          "detail": {
            "field": "soe",
            "type": "nominal"
          },
          "color": {"value": "grey"},
          "opacity": {
              "condition": {
                "selection": "gender_selection",
                "value": 1
              },
      "value": 0.1
    }
        }
      },
      {
        "selection": {
      "gender_selection": {
        "type": "multi",
        "fields": ["Gender"],
        "bind": "legend"
      }
    },
        "mark": {
          "type": "point",
          "filled": true
        },
        "encoding": {
          "color": {
            "field": "Gender",
            "type": "nominal",
            "scale": {
              "domain": ["total_arrivals_female", "total_arrivals_male"],
              "range": ["steelblue", "orange"] 
            },
            "legend": {
              "title": "Gender",
              "labelExpr": "{'total_arrivals_female': 'Female', 'total_arrivals_male': 'Male'}[datum.label]",
              "labelFontSize": 14,
              "titleFontSize": 16
            }
          },
          "size": {"value": 70},
          "opacity": {"value": 1},
          "tooltip": [
            {"field": "soe", "type": "nominal", "title": "State"},
            {"field": "total_arrivals_female", "type": "quantitative", "title": "Female Arrivals"},
            {"field": "total_arrivals_male", "type": "quantitative", "title": "Male Arrivals"}
          ],
           "opacity": {
              "condition": {
                "selection": "gender_selection",
                "value": 1
              },
      "value": 0.1
    }
        }
      }
    ]
}
