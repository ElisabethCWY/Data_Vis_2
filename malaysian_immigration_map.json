{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Arrivals by State",
    "anchor": "start",
    "fontSize": 20
  },
  "width": 500,
  "height": 300,
  "background": "rgb(0,0,0,0)",
  "projection": {"type": "mercator"},
  "data": {
    "url": "https://raw.githubusercontent.com/ElisabethCWY/3179_HW1/refs/heads/main/ne_1.json",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ElisabethCWY/3179_HW1/refs/heads/main/aggregated_arrivals_soe.csv"
        },
        "key": "soe",
        "fields": ["total_arrivals", "total_population"]
      }
    },
    {
      "calculate": "(datum.total_arrivals / datum.total_population) * 100",
      "as": "arrivals_per_population"
    }
  ],
  "selection": {
    "highlight": {
      "type": "single",
      "on": "mouseover", 
      "empty": "none",    
      "fields": ["properties.name"]
    }
  },
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "arrivals_per_population",
      "type": "quantitative",
      "title": "Immigrants per Population (%)",
      "scale": {
        "type": "log",
        "domain": [0.0001, 0.001, 0.01, 0.1, 1]
      },
      "legend": {
        "labelFontSize": 13,  
        "titleFontSize": 12,
        "type": "symbol",
        "symbolType":"square"
      }
    },
    "opacity": {
      "condition": {
        "selection": "highlight",
        "value": 1   
      },
      "value": 0.8   
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "total_arrivals", "type": "quantitative", "title": "Total Arrivals", "format": ",d"},
      {"field": "total_population", "type": "quantitative", "title": "Total Population", "format": ",d"},
      {
        "field": "arrivals_per_population",
        "type": "quantitative",
        "title": "Immigrants per Population (%)"
      }
    ]
  }
}
