{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1100,
    "height": 550,
    "background": "rgb(0,0,0,0)",
    "title": {
      "text": "Immigrant Origin Countries",
      "fontSize": 20, 
      "anchor": "middle",
      "dx": 130
    },
    "projection": {"type": "equalEarth"},
    
      "params": [
        { 
          "name": "Arrivals_Above",
          "value": 0,
          "bind": {
            "input": "range",
            "min": 0,
            "max": 500000,
            "step": 10,
            "name": "Minimum Total Arrivals: "
          }
        }
      ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ElisabethCWY/3179_HW1_Submission/refs/heads/main/immigrant_countries.csv"
        },
        "transform": [
        {
          "filter": "datum.total_arrivals >= Arrivals_Above"
        }
      ]
        ,
        "mark": {
          "type": "circle",
          "opacity": 0.8
        },
        "encoding": {
          "longitude": {"field": "longitude", "type": "quantitative"},
          "latitude": {"field": "latitude", "type": "quantitative"}, 
          "size": {
            "field": "total_arrivals",
            "type": "quantitative",
            "title": "Total Arrivals",
            "scale": {
              "type": "log",
              "domain": [1, 10000, 500000],
              "range": [1, 200]
            }
          },
          "color": {
            "field": "total_arrivals",
            "type": "quantitative",
            "scale": {
              "domain": [1, 10000, 500000],
              "range": ["white", "steelblue", "black"]
            },
            "legend": {
            "labelFontSize": 14,  
            "titleFontSize": 16  
          }
          },
          "tooltip": [
            {"field": "country_full", "type": "nominal", "title": "Country"},
            {"field": "total_arrivals", "type": "quantitative", "title": "Total Arrivals", "format": ",d"}
          ]
        }
      }
    ]
  }
  